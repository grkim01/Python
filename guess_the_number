# template for "Guess the number" mini-project
# input will come from buttons and an input field
# all output for the game will be printed in the console

import simplegui
import random


input = 0
secret_number = None
limited_number = 0 

# helper function to start and restart the game
def new_game():
    # initialize global variables used in your code here
    global input, secret_number, limited_number
    secret_number = random.randrange(0,100)
    limited_number = 7
    
    
    
# define event handlers for control panel
def range100():
    # button that changes the range to [0,100) and starts a new game 
    global input, secret_number, limited_number
    secret_number = random.randrange(0,100)
    limited_number = 7
    print "Starting new game!"
def range1000():
    # button that changes the range to [0,1000) and starts a new game     
    global input, secret_number, limited_number
    secret_number = random.randrange(0,1000)
    limited_number = 10
    print "Starting new game!" 
def input_guess(guess):
    # main game logic goes here	
    global input, secret_number, limited_number
    
    input = int(guess)
    print "Guess was ",input
    
    if input < secret_number:
        print "Higher"
    elif input > secret_number:
        print "Lower"
    elif input == secret_number:
        print "Correct"
       
    limited_number -= 1
    print "You have", limited_number, "of chances left."
    
    if input == secret_number or limited_number == 0:
        print "Starting new game!"
        return new_game()
    
# create frame
f = simplegui.create_frame("Guess the Number",300,300)

# register event handlers for control elements and start frame
f.add_button ("Range [0,100)",range100,150)
f.add_button ("Range [0,1000)",range1000,150)
f.add_input("Enter your guess number",input_guess,150)

# call new_game 
new_game()



